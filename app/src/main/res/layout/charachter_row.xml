<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:android="http://schemas.android.com/apk/res/android"
         xmlns:card_view="http://schemas.android.com/apk/res-auto"
         xmlns:app="http://schemas.android.com/apk/res-auto"
>
    <data>
        <variable
                name="item"
                type="com.whackyapps.pallavgrover.pallav_starwars_challenge.data.model.PersonModel"/>

    </data>
    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardUseCompatPadding="true"
            android:background="#f5f5f5"
            android:layout_marginBottom="8dp"
            card_view:cardElevation="4dp"
            android:focusable="true"
            card_view:cardCornerRadius="3dp">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:transitionName="profile"
                android:id="@+id/header">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    fontPath="fonts/Roboto-Light.ttf"
                    android:textSize="@dimen/primary_list_item_text_size"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/primaryTextColor"
                    android:id="@+id/name"
                    android:text="@{item.name}"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/like"
                    android:layout_below="@+id/name"
                    fontPath="fonts/Roboto-Light.ttf"
                    android:layout_marginStart="8dp"
                    android:textSize="@dimen/secondary_list_item_text_size"
                    android:textColor="@color/secondaryTextColor"
                    android:text="@{item.birth_year}"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</layout>